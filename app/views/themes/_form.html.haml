.d-flex.mobile-notifications-form.flex-md-row.flex-column-reverse{'data-controller' => 'themes'}
  .flex-1.me-md-4
    = simple_form_for @theme, html: {} do |f|
      .mb-3
        .d-flex
          = f.label :name, "#{t('theme.name')} <abbr title='required'>*</abbr>".html_safe, class: 'flex-grow-1'
          = create_theme_tip
        = f.input :name, label: false
      .mb-3
        .d-flex
          = f.label :primary_color, "#{t('theme.primary_color')} <abbr title='required'>*</abbr>".html_safe
          = primary_color_tip
        = f.input :primary_color, label: false
      .mb-3
        .d-flex
          = f.label :secondary_color, "#{t('theme.secondary_color')} <abbr title='required'>*</abbr>".html_safe
          = secondary_color_tip
        = f.input :secondary_color, label: false
      .mb-3
        .d-flex
          = f.label :primary_text_color, "#{t('theme.primary_text_color')} <abbr title='required'>*</abbr>".html_safe
          = primary_text_color_tip
        = f.input :primary_text_color, label: false
      .mb-3
        .d-flex
          = f.label :secondary_text_color, "#{t('theme.secondary_text_color')} <abbr title='required'>*</abbr>".html_safe
          = secondary_text_color_tip
        = f.input :secondary_text_color, label: false

      .mb-3
        %h3 Theme Background Images

        .platform-section
          %h5= t('theme.android')
          .device-mockup
            - android_assets = android_assets(f.object.assets)
            = f.fields_for :assets, android_assets do |ff|
              = render 'theme_image_form', f: ff

        .platform-section
          %h5= t('theme.ios')
          .device-mockup
            - ios_assets = ios_assets(f.object.assets)
            = f.fields_for :assets, ios_assets do |ff|
              = render 'theme_image_form', f: ff

      .actions
        = link_to t('shared.cancel'), themes_path, class: 'btn btn-secondary me-1'
        = f.submit t('shared.save'), class: 'btn btn-primary'

  / Preview
  %div{style: 'width: 390px'}
    = render 'preview_theme'
