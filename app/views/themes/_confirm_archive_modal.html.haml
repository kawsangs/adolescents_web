%div{'data-controller': 'theme-index'}
  #confirmModalArchive.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :tabindex => "-1"}
    .modal-dialog
      .modal-content
        .modal-header
          %h5#exampleModalLabel.modal-title{'data-content': t('shared.confirm_archive', name: '_type_')}
            %i.fas.fa-exclamation-triangle.text-danger
            / Message title to replace

          %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}

        .hint{ style: 'padding: 1rem' }
          = t('theme.confirm_archive_hint')

        .modal-body{'data-content': t('shared.are_you_sure_to_archive', type: "_type_", name: '_name_')}
          / Message body to replace

        .modal-footer
          %button.btn.btn-secondary{"data-bs-dismiss" => "modal", :type => "button"}= t('shared.cancel')

          / Message url to replace
          = button_to t('shared.yes_archive'), '#', method: :delete, class: 'btn btn-danger'
