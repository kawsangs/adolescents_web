.form-wrapper#login_form
  %h2.font-weight-normal.text-center.my-4
    ចូលប្រើ / Sign in

  = button_to user_google_oauth2_omniauth_authorize_path, method: :post, class: 'btn btn-outline-primary w-100' do
    = image_tag 'google.png', style: 'width: 18px;'
    = t('devise.sign_in_with', omniauth: 'Gmail')

  = button_to user_facebook_omniauth_authorize_path, method: :post, class: 'btn btn-outline-primary w-100 mt-2' do
    %i.fa-brands.fa-facebook{style: 'font-size: 18px;'}
    = t('devise.sign_in_with', omniauth: 'Facebook')

  .d-flex.flex-row.align-items-center
    .line.flex-grow-1
    .or-label OR
    .line.flex-grow-1

  = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post, 'data-turbo': false }) do |f|
    = f.error_notification

    .mb-3= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }

    .mb-3.form-actions
      = f.button :submit, t('devise.sessions.send_otp_for_sign_in'), class: 'btn btn-primary w-100 mb-2'

  .text-end.mb-3
    .form-group
      = render "devise/shared/links"

      .mb-3= link_to t('about.about_us'), about_path, class: 'btn btn-link pr-0'

    .form-group
      %span.fs-xs
        = t("sidebar.version") + ': '
        = ENV['APP_VERSION'] || 'dev'
