.form-wrapper
  %h2.font-weight-normal.text-center.my-4 Account Activation for

  = form_for resource, :as => resource_name, :url => update_user_confirmation_path, :html => {:method => 'put'}, :id => 'activation-form' do |f|
    = devise_error_messages!
    %fieldset
      %legend
        = resource.try(:email)

      - if @requires_password
        .mb-3.form-group
          = f.label :password, 'Choose a Password'
          = f.password_field :password, class: 'form-control'
        .mb-3.form-group
          = f.label :password_confirmation, 'Password Confirmation'
          = f.password_field :password_confirmation, class: 'form-control'

      = hidden_field_tag :confirmation_token, @confirmation_token

      .actions
        = f.submit "Activate", class: 'btn btn-primary mb-2'
