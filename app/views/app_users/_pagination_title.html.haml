.d-flex.flex-grow-1
  - if objects.present?
    .pagy-wrapper.justify-content-lg-end.justify-content-center
      .d-flex.flex-grow-1
        .flex-1.d-flex.align-items-center.mb-2
          %span
            = t('shared.pagination_title', from: @pagy.from, to: @pagy.to, total: number_with_delimiter(@pagy.count)).html_safe

            = "(#{t('app_user.total_devices')}: <b>#{number_with_delimiter(@total_uniq_devices)}</b>)".html_safe

  .flex-grow-1

  - if @pagy.pages > 1
    .d-lg-block.d-none
      != pagy_bootstrap_nav(@pagy)
