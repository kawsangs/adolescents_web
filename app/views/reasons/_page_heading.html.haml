= content_for :header_title_right_col do
  .ms-1
    = render "shared/buttons/download_button", url: reasons_path(filter_params.merge(format: :xlsx))

  .ms-1
    .d-flex.justify-content-end
      = render "shared/buttons/add_new_button", url: new_reason_path, name: t("sidebar.reasons")

      %button.btn.btn-sm.ms-1{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", :type => "button"}
        %i.fa-solid.fa-ellipsis-vertical

      %ul.dropdown-menu.dropdown-menu-end
        %li
          %a.dropdown-item{ href: new_reason_importer_path }
            %i.fa-solid.fa-file-import
            %span= t("shared.import_from_file")
        %li
          %a.dropdown-item{ href: reason_importers_path }
            %i.fa-solid.fa-clock-rotate-left
            %span= t('shared.importing_history', name: t('sidebar.reasons'))
        %li
          %a.dropdown-item{ href: reasons_path(filter_params.merge(format: :json)), target: '_blank' }
            %i.fa-solid.fa-download
            %span= t('shared.download_json')

= render 'shared/header_title', title: t('sidebar.reasons')
