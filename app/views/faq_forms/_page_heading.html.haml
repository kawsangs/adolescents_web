= content_for :header_title_right_col do
  - if current_user.primary_admin?
    = render "shared/buttons/download_button", label: t('shared.download_json'), url: faq_forms_path(filter_params.merge(format: :json))

  .ms-1= render "shared/buttons/add_new_button", url: new_faq_form_path, name: t("topic.faq_form")

= render 'shared/header_title', title: t('topic.faq_form')

.d-flex.align-items-center
  .flex-grow-1
    %form{ action: faq_forms_path, method: 'get' }
      = render "shared/filters/filter_name"
  %div
    = render "faq_forms/switch_view_buttons"
