= content_for :header_title_right_col do
  .me-1
    = render "shared/buttons/download_button", label: t('facility.download_json'), url: services_path(filter_params.merge(format: :json))

  = render "shared/buttons/add_new_button", url: new_service_path, name: t("service.service")

.container-fluid.px-4
  = render 'shared/header_title', title: t('service.services')
  = render "filters"
  = render "shared/no_data", items: @services

  - if @services.present?
    = render "shared/pagination_title", objects: @services

    .table-responsive
      %table.table.table-hover.pretty
        %thead
          %tr
            %th #
            %th= t('shared.name')
            %th= t('shared.created_at')
            %th= t('shared.updated_at')
            %th

        %tbody
          - @services.each_with_index do |service, index|
            = render "service", service: service, num: @pagy.from + index

    - if @pagy.page > 1
      .d-flex.pagy-wrapper.justify-content-lg-end.justify-content-center
        != pagy_bootstrap_nav(@pagy)

= render "shared/modals/confirm_delete_modal"
