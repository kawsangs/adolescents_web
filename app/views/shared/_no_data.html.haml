- url ||= ''
- label ||= t("shared.add_new")
- remote ||= false

- if items.blank?
  .text-center.no-data.m-4
    %h2= t('shared.no_data_found')

    - if items.length.zero? || policy(items.class.to_s.split("::")[0..-2].join('::').constantize).create? && !request.query_string.present?
      %p= t('shared.use_plus_to_add_item')

      - if url.present?
        = link_to url, remote: remote, class: "btn btn-primary btn-sm shadow-sm" do
          %i.fas.fa-plus.fa-sm.text-white-50
          = label
