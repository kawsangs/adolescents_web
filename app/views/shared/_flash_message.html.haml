- if notice.present?
  .alert.alert-success.alert-dismissible.fade.show.notify-message.ml-2{:role => "alert"}
    = notice
    %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "alert", :type => "button"}

- if alert.present?
  .alert.alert-warning.alert-dismissible.fade.show.notify-message.ml-2{:role => "alert"}
    = alert
    %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "alert", :type => "button"}

- if flash[:recaptcha_error].present?
  .alert.alert-warning.alert-dismissible.fade.show.notify-message.ml-2{:role => "alert"}
    = flash[:recaptcha_error]
    %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "alert", :type => "button"}

:javascript
  setTimeout(function() {
    var alertList = document.querySelectorAll('.alert')
    alertList.forEach(function (alert) {
      alert.classList.remove('show')
    })
  }, 4000);
