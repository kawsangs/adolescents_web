- label_column_number ||= ""
- association ||= "videos"

= render "shared/no_data", items: @tags

- if @tags.present?
  = render "shared/pagination_title", objects: @tags

  .table-responsive
    %table.table.table-hover.pretty
      %thead
        %tr
          %th #
          %th= t('shared.tag')
          %th= label_column_number

      %tbody
        - @tags.each_with_index do |tag, index|
          %tr
            %td= @pagy.from + index
            %td= tag.name
            %td= tag.send(association).length

  = render "shared/footers/pagination"
